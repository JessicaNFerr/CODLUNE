    <!-- Router e utilidades -->
    <script>
      const routes = ['home', 'servicos', 'planos', 'portfolio', 'sobre', 'contato'];
      const setRoute = (hash) => {
        const target = (hash || '#home').replace('#', '');
        document.querySelectorAll('[data-route]').forEach((el) => el.classList.remove('active', 'page-enter-active'));
        const page = document.querySelector(`[data-route="${target}"]`) || document.querySelector('[data-route="home"]');
        page.classList.add('active');
        // animação de entrada
        requestAnimationFrame(() => page.classList.add('page-enter-active'));
        // fechar menu mobile ao navegar
        mobileMenu.classList.add('hidden');
      };
      window.addEventListener('hashchange', () => setRoute(location.hash));
      window.addEventListener('DOMContentLoaded', () => {
        setRoute(location.hash);
        document.getElementById('year').textContent = new Date().getFullYear();
      });

      // Menu mobile toggle
      const menuBtn = document.getElementById('menuBtn');
      const mobileMenu = document.getElementById('mobileMenu');
      menuBtn?.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
